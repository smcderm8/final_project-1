<div class="page-header">
  <h1>
    Courses
    <a href="/courses/new" class="btn btn-lg btn-success">Add a New Course</a>
  </h1>
</div>

<% @courses.each do |course| %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title">
          <%= course.name %>
          &emsp;
          <img src = "<%= course.image_url %>" width = 500, height = 260>
        </h2>
      </div>
      <table class="table table-striped table-hover">
      <tr>
        <th>Address</th>
        <th>Par</th>
        <th>Rating</th>
        <th>Slope</th>
        <th>Yardage</th>
        <th>Actions</th>
      </tr>

      
      <tr>
        <td><%= course.address %></td>
        <td><%= course.par %></td>
        <td><%= course.rating %></td>
        <td><%= course.slope %></td>
        <td><%= course.yardage %></td>
        <td>
          <a href="/courses/<%= course.id %>" class="btn btn-primary">View Course Details</a>
          <!--<a href="/courses/<%= course.id %>/edit" class="btn btn-warning">Edit</a>-->
          <!--<a href="/delete_course/<%= course.id %>" class="btn btn-danger" rel="nofollow">Delete</a>-->
        </td>
      </tr>
    </table>
    </div>
  </div>
</div>
<% end %>
