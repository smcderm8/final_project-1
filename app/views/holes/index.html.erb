<div class="page-header">
  <h1>
    Course Scorecards
  </h1>
</div>

<% @courses.each do |course| %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title">
          <%= course.name %>
          &emsp;
          <img src = "<%= course.image_url %>" width = 300, height = 120>
        </h2>
      </div>
      <table class="table table-striped table-hover">
        <tr>
          <th>Hole number</th>
          <th>Par</th>
          <th>Yardage</th>
          <th>Handicap</th>
          <!--<th>Actions</th>-->
        </tr>
  
        <% @holes = course.holes %>
        <% @holes.each do |hole| %>
        <tr>
          <td><%= hole.hole_number %></td>
          <td><%= hole.par %></td>
          <td><%= hole.yardage %></td>
          <td><%= hole.handicap %></td>
          <!--<td>-->
            <!--<a href="/holes/<%= hole.id %>" class="btn btn-primary">Show</a>-->
            <!--<a href="/holes/<%= hole.id %>/edit" class="btn btn-warning">Edit</a>-->
            <!--<a href="/delete_hole/<%= hole.id %>" class="btn btn-danger" rel="nofollow">Delete</a>-->
          <!--</td>-->
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
<% end %>