<div class="page-header">
  <h1>
    Scores
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Course</th>
        <th>Match</th>
        <th>Player</th>
        <th>Hole</th>
        <th>Score</th>
        <th>Actions</th>
      </tr>

      <% @scores.each do |score| %>
      <tr>
        <td><%= score.match.course.name %></td>
        <td><%= score.match.name %></td>
        <td><%= score.player.name %></td>
        <td><%= score.hole.hole_number %></td>
        <td><%= score.score %></td>
        <td>
          <a href="/scores/<%= score.id %>" class="btn btn-primary">Show</a>
          <a href="/scores/<%= score.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_score/<%= score.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
