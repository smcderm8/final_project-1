<div class="page-header">
  <h2><%= @team.name %></h2>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">

      <dt></dt>
      <dd><img src = "<%= @team.photo_url %>" width = 750, height = 200</dd>

    </dl>
  </div>
</div>


<h3>Players</h3>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th></th>
        <th>Name</th>
        <th>Handicap Index</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Actions</th>
      </tr>
      
      <% @roster = @team.players %>

      <% @roster.each do |player| %>
      <tr>
        <td><img src = "<%= player.photo_url %>" width=150, height=200></td>
        <td><%= player.name %></td>
        <td><%= player.handicap_index %></td>
        <td><%= player.email %></td>
        <td><%= player.phone_number %></td>
        <td>
          <a href="/teams/<%= team.id %>" class="btn btn-primary">Show</a>
          <a href="/teams/<%= team.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_team/<%= team.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>


