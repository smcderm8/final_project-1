<div class="page-header">
  <h2><%= @team.name %></h2>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">

      <dt></dt>
      <dd><img src = "<%= @team.photo_url %>" width = 750, height = 200</dd>

    </dl>
  </div>
</div>


<h3>Players</h3>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th></th>
        <th>Name</th>
        <th>Handicap Index</th>
        <th>Email</th>
        <th>Phone Number</th>
      </tr>
      
      <% @roster = @team.players %>

      <% @roster.each do |player| %>
      <a NAME="<%= player.name %>"></a>
      <tr>
        <td><img src = "<%= player.photo_url %>" width=175, height=125></td>
        <td><%= player.name %></td>
        <td><%= player.handicap_index %></td>
        <td><%= player.email %></td>
        <td><%= player.phone_number %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>


